<%- include ('../partials/adminHeader') %>
<main>
<section class="content-main" style="background-color: rgb(225, 225, 225);">

<div class="card" >
  <div class="content-header">
    <div class="card-header">
      <h5>Add New Coupon</h5>
    </div>
    <% if (errMsg) { %>
      <div class="alert alert-danger" role="alert">
          <%= errMsg %>
      </div>
    <% } %>
  </div>
  <div class="card-body">
      
      <form method="post" action="/addCoupon" name="enq"  >
          <div class="row">
              <div class="form-group col-md-6">
                  <label> Name <span class="required">*</span></label>
                  <input required="" class="form-control square" name="couponName" type="text" pattern="[^\s]+" title="Spaces are not allowed">
              </div>

              <div class="form-group col-md-6">
                <label>Description<span class="required">*</span></label>
                <input required="" class="form-control square" name="description" type="text">
              </div>

              <div class="form-group col-md-6">
                  <label>Percentage<span class="required">*</span></label>
                  <input required="" class="form-control square" name="percentage" type="number"  min="0" max="100" >
              </div>

              <div class="form-group col-md-6">
                <label>Minimum Amount<span class="required">*</span></label>
                <input required="" class="form-control square" name="minimumAmount" type="number">
              </div>

              <div class="form-group col-md-6">
                  <label>Maximum Discount<span class="required">*</span></label>
                  <input required="" class="form-control square" name="maximumAmount" type="number">
              </div>

              <div class="form-group col-md-6 mb-3">
                  <label>Expiry Date<span class="required">*</span></label>
                  <input required="" class="form-control square" name="expiryDate" type="date" min="<%= currentDate %>">
             </div>

              <div class="col-md-6 mt-4">
                <button type="submit" class="btn btn-primary  submit" name="submit" value="Submit">Create</button>

              </div>
          </div>
      </form>
  </div>
</div>

</section>


<footer class="main-footer font-xs">
