<%- include ('../partials/adminHeader') %>
<main>
  <section class="content-main" style="background-color: rgb(235, 234, 234);">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Edit Product</h2>
            
            <% if (error ) { %>
                <p class="text-danger"><%= error %></p>
            <% } %>
           
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="card-body">
              <form method="post" action="/editProduct/<%= product._id %>" id="editproductform"  enctype="multipart/form-data" multiple>  
                    <div class="col-lg-4 mb-4">
                        <label for="product_name" class="form-label">Product Name</label>
                        <input type="text" placeholder="Type here" value="<%= product.productName %>" name="productName" class="form-control border" id="productnameX">
                        <div id="productName-error" class="error-message"></div>
                    </div>
                    <div class="col-lg-4 mb-4">
                        <label class="form-label">Brand Name</label>
                        <input type="text" placeholder="Type here" value="<%= product.brand %>" name="brandName" class="form-control border" id="brandnameX">
                        <div id="brandName-error" class="error-message"></div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Full description</label>
                        <textarea placeholder="Type here" name="description"  id="descriptionX" class="form-control border" rows="4"><%= product.description %></textarea>
                        <div id="description-error" class="error-message"></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Regular price</label>
                                <input placeholder="$"  id="regularPriceX" value="<%= product.regularPrice %>" name="regularPrice" type="text" class="form-control border" required pattern="[0-9]+">
                                <div id="regularPrice-error" class="error-message"></div>
                
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Discount (Rs)</label>
                                <div class="input-group">
                                    <input placeholder="$" id="discountX" name="discount" value="<%= product.discount %>" type="text" class="form-control border" required pattern="[0-9]+">
                                    <div class="input-group-append">
                                        <span class="input-group-text" style="background-color: #fff; border: none; border-left: 1px solid #ced4da;"></span>
                                    </div>
                                    <button id="applyDiscountButton" class="btn btn-primary btn-md" type="button" onclick="applyDiscount('<%= product._id %>')">Apply Discount</button>
                                </div>
                                <div id="discount-error" class="error-message"></div>
                            </div>
                            
                        </div>
                        <div class="col-lg-4">
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">Stock</label>
                                <input placeholder="" id="inStockX" value="<%= product.inStock %>" name="inStock" type="text" class="form-control border" required pattern="[0-9]+">
                                <div id="stock-error" class="error-message"></div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row gx-2">
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label">Category</label>
                                    <select class="form-select border" style="width: 150px;" name="category">
                                      <% for (let i=0; i < cat.length; i++) { %>
                                          <option value="<%= cat[i]._id %>">
                                              <%= cat[i].name %>
                                          </option>
                                          <% } %>
                                  </select>
                                </div>
                            </div>
                        </div>
                    </div>
             
                    <!--CHOOSE IMAGES-->

                    <div class="card mb-4">
                      <div class="card-header">
                          <h4>Choose Images</h4>
                      </div>
                      <div id="addedImagesContainer" class="col-md-6" style="display: flex;">
                          <% for (let i = 0; i < product.productImage.length; i++) { %>
                              <div class="mb-4" style="display: inline-block;">
                                  <img class="rounded" style="width: 50px; height: 40px;" src="/public/photos/productImages/<%= product.productImage[i] %>" alt="image" data-filename="<%= product.productImage[i] %>" id="imgCount" >
                                  <span class="delete-icon" onclick="deleteImage('<%= product._id %>', '<%= i %>')">❌</span>
                              </div>
                          <% } %>
                      </div>
                      
                      <div class="card-body">
                          <div class="input-upload">
                              <img src="assets/imgs/theme/upload.svg" alt="">
                              <input class="form-control" name="images" id="imageInput" type="file" accept=".jpg, .jpeg, .png">
                              <div id="image-error" class="error-message"></div>
                          </div>
                      </div>
                  </div>
                <div>
                  <button class="btn btn-md rounded font-sm " id="updatebtn" type="submit" style="background-color: rgb(0, 153, 255);">Update</button>
                </div>

             </form>


           </div>
        </div>
       </div>
    </section>
 

  <!----footer------->

  <footer class="main-footer font-xs">
    <div class="row pb-30 pt-15">
        <div class="col-sm-6">
            <script>
            document.write(new Date().getFullYear())
            </script> ©, Evara - HTML Ecommerce Template .
        </div>
        <div class="col-sm-6">
            <div class="text-sm-end">
                All rights reserved
            </div>
        </div>
    </div>
  </footer>

</main>
  <script src="/public/admin/assets/js/vendors/jquery-3.6.0.min.js"></script>
  <script src="/public/admin/assets/js/vendors/bootstrap.bundle.min.js"></script>
  <script src="/public/admin/assets/js/vendors/select2.min.js"></script>
  <script src="/public/admin/assets/js/vendors/perfect-scrollbar.js"></script>
  <script src="/public/admin/assets/js/vendors/jquery.fullscreen.min.js"></script>
  <script src="/public/admin/assets/js/vendors/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <!-- Main Script -->
  <script src="/public/admin/assets/js/main.js" type="text/javascript"></script>
  <script src="/public/admin/assets/js/custom-chart.js" type="text/javascript"></script>

  <script>


function deleteImage(productId, index) {
    // Make an AJAX request to delete the image
    fetch(`/deleteImage/${productId}/${index}`, {
        method: 'DELETE',
    })
    .then(response => {
        if (response.ok) {
            // Update the UI to remove the deleted image
            document.getElementById('addedImagesContainer').innerHTML = '';
            // Reload the page or update the images list
            // You can also consider updating the images list without reloading the page
            location.reload(); 
        } else {
            console.error('Failed to delete image');
        }
    })
    .catch(error => console.error('Error deleting image:', error));
}

function applyDiscount(productId) {

    const deduction = document.getElementById('discountX').value
    console.log("offer is rs:",deduction);

    // Make an AJAX request to delete the image
    fetch(`/applyProductOffer?productId=${productId}&deduction=${deduction}`, {
        method: 'PATCH',
    })
    .then(response => {
        if (response.ok) {

            
            location.reload(); 
        } else {
            console.error('Failed to apply discount ');
        }
    })
    .catch(error => console.error('Error applying discount:', error));
}

  </script>


</body>
</html>